CREATE TABLE productos (
    producto_id NUMBER GENERATED BY DEFAULT AS IDENTITY,
    nombre VARCHAR2(100) NOT NULL,
    sku VARCHAR2(100),
    codigo VARCHAR2(10),
    CONSTRAINT pk_productos PRIMARY KEY (producto_id),
    CONSTRAINT uk_productos_codigo UNIQUE (codigo),
    CONSTRAINT uk_productos_sku UNIQUE (sku)
);

INSERT INTO productos (nombre, codigo) VALUES ('Cámara', 'A101');
INSERT INTO productos (nombre, codigo) VALUES ('Lente', 'A102');
INSERT INTO productos (nombre, codigo) VALUES ('Trípode', 'A101'); -- ERROR: valor duplicado

SELECT constraint_name, constraint_type
FROM user_constraints
WHERE table_name = 'PRODUCTOS';
